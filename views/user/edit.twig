{% extends "base.twig" %}

{% block content %}
<div class="well">
    <ul class="nav nav-tabs">
        <li class="active"><a href="#home" id="profileTab" data-toggle="tab">Profile</a></li>
        <li><a href="#profile" id="passwordTab" data-toggle="tab">Password</a></li>
    </ul>
    <div id="myTabContent" class="tab-content">
        <div class="tab-pane active in" id="home">
            <form id="tab" method="POST" action="{{path("user.edit", {'id':id})}}">
           {{ form_widget(form) }}
                    <div>
                        <button type="submit" class="btn btn-primary">Update</button>
                        <a href="{{path("user.list")}}" class="btn danger btn-danger">Cancel</a>
                    </div>
                </form>
            </div>
            <div class="tab-pane fade" id="profile">
                <form id="tab2" name="pass" method="POST" action="{{path("user.edit", {'id':id})}}">
                     {{ form_widget(changepassword) }}
                        <div>
                            <button type="submit" class="btn btn-primary">Update</button>
                            <a href="{{path("user.list")}}" class="btn danger btn-danger">Cancel</a>
                        </div>
                    </form>
                </div> 
            </div>
        </div>
{% if startTab == "password" %}
        <script>           
        $(function(){
            $('#passwordTab').click();
        });
            </script>
{% endif %}
{% endblock %}